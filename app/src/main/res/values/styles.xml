<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="Button">
        <item name="android:minWidth">@dimen/action_button_min_width</item>
    </style>

    <style name="ButtonBlue" parent="ButtonColored">
        <item name="android:background">@drawable/button_blue_background</item>
    </style>

    <style name="ButtonColored" parent="Button">
        <item name="android:textColor">@color/button_colored_text</item>
    </style>

    <style name="ButtonGreen" parent="ButtonColored">
        <item name="android:background">@drawable/button_green_background</item>
    </style>

    <style name="ButtonOrange" parent="ButtonColored">
        <item name="android:background">@drawable/button_orange_background</item>
    </style>

    <style name="ButtonRed" parent="ButtonColored">
        <item name="android:background">@drawable/button_red_background</item>
    </style>

    <style name="ButtonWhite" parent="Button">
        <item name="android:background">@drawable/button_white_background</item>
    </style>

</resources>
